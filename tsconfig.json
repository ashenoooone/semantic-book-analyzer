{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "ESNext",
		"esModuleInterop": true,
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["./src/*"],
			"~": ["./src/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "declarations.d.ts"],
	"exclude": [
		"node_modules",
		"./node_modules",
		"./node_modules/*",
		"./node_modules/@types/node/index.d.ts",
	]
}
